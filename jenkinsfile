pipeline {
   agent any
     stages {
        stage('Pull') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                        userRemoteConfigs: [[
                            credentialsId: 'github_credential', 
                            url: 'https://github.com/Cyberkabil10/devops-CD.git']]])
                
            }
            }
        stage('Build') {
            steps {
                   script{
                   sh "ansible-playbook Ansible/build.yml -i Ansible/inventory/host.yml  "
                   }

                
            }            
            
        }     
    }
}

