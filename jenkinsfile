pipeline {
   agent any
     stages {
        stage('Pull') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                        userRemoteConfigs: [[
                            credentialsId: 'github_credential', 
                            url: 'https://github.com/Cyberkabil10/devops-CD.git']]])
                
            }
            }
        stage('Build') {
            steps {
                   script{
                   ansiblePlaybook credentialsId: 'private_key', installation: 'ansible', inventory: 'Ansible/inventory/host.yml', playbook: 'Ansible/build.yml '
                   }

                
            }            
            
        }     
    }
}

